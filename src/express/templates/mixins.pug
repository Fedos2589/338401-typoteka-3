mixin breadcrumb(breadcrumb)
  li.preview__breadcrumbs-item
    a.preview__breadcrumbs-link(href='#') #{breadcrumb}

mixin previewItem(preview)
  - const { breadcrumbs, img, srcset, alt, datetime, heading, text } = preview
  li.preview__item
    ul.preview__breadcrumbs
      each breadcrumb in breadcrumbs
        +breadcrumb(breadcrumb)
    if img
      .preview__background
        img.preview__background-image(src=`/static/${img}` width='460' height='240' srcset=`${srcset}` alt=`${alt}`)
    time.preview__time(datetime=`${datetime}`) #{datetimeFormatted}
    h3.preview__name
      a.preview__name-link(href='#') #{heading}
    p.preview__text #{text}
    a.preview__comment(href='#') Комментарии
      span.preview__cloud
      b.preview__comment-count 12

mixin theme(theme, deleteButton)
  - const { title, sup } = theme
  li.themes__item
    a.themes__item-link(href="#") #{title}
      sup #{sup}
    if deleteButton
      button.themes__remove-btn(type='button') Удалить категорию